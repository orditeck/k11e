---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import MainNav from "../layouts/MainNav.astro";
import MainContent from "../layouts/MainContent.astro";

interface Props {
  entry: CollectionEntry<"pages">;
  lang: "fr" | "en";
}

export async function getStaticPaths() {
  const pages = await getCollection("pages");
  return pages.map((page) => {
    const { lang } = /^((?<lang>[a-z]{2})\/)(?<restOfSlug>.*)/i.exec(page.slug)
      ?.groups ?? {
      lang: "en",
    };
    return {
      params: { slug: page.slug },
      props: {
        entry: page,
        lang: lang as "fr" | "en",
      },
    };
  });
}

const { entry, lang = "fr" } = Astro.props;
const { title, toc = true, sidebar = true } = entry.data;
const width = toc || sidebar ? "largeAdaptive" : "narrow";
---

<Layout title={title} width={width}>
  <MainNav />
  <MainContent entry={entry} lang={lang} toc={toc} sidebar={sidebar} />
</Layout>
