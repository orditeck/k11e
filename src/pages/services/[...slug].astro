---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import MainNav from "../../layouts/MainNav.astro";
import MainContent from "../../layouts/MainContent.astro";

export async function getStaticPaths() {
  const pages = await getCollection("services");
  return pages.map((page) => {
    const { lang } = /^((?<lang>[a-z]{2})\/)(?<restOfSlug>.*)/i.exec(page.slug)
      ?.groups ?? {
      lang: "en",
    };
    return {
      params: { slug: page.slug },
      props: {
        entry: page,
        lang: lang as "fr" | "en",
      },
    };
  });
}

const { entry, lang } = Astro.props;
---

<Layout title={entry.data.title} width="largeAdaptive">
  <MainNav />
  <MainContent entry={entry} lang={lang} />
</Layout>
