---
import "@picocss/pico";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Keven Lefebvre | Senior Software Developer"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/icon" href="/favicon.ico" />
    <title>{title} | Keven Lefebvre, Senior Software Developer</title>
  </head>
  <body>
    <slot />
  </body>
</html>
